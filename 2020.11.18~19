--> 이용중인 사용자목록

--테이블 생성
CREATE TABLE EMP(
EMP_NO VARCHAR2(30) NOT NULL,
EMP_NAME VARCHAR2(80) NOT NULL,
SALARY NUMBER NULL,
HIRE_DATE DATE NULL);

--테이블 LAYOUT
DESC EMP;

--테이블 조회
SELECT * FROM EMP;

--테이블 수정
ALTER TABLE EMP MODIFY EMP_NAME VARCHAR2(100);

DESC EMP;

ALTER TABLE EMP ADD EMP_NAME2 VARCHAR2(80);

DESC EMP;

ALTER TABLE EMP RENAME COLUMN EMP_NAME2 TO EMP_NAME3;
DESC EMP;

ALTER TABLE EMP DROP COLUMN EMP_NAME3;
DESC EMP;

--테이블 삭제
DROP TABLE EMP;
SELECT * FROM EMP;
DESC EMP;

CREATE TABLE EMP (
EMP_NO VARCHAR2(30) PRIMARY KEY,
EMP_NAME VARCHAR2(80) NOT NULL,
SALAY NUMBER,
HIRE_DATE DATE);

DESC EMP;

CREATE TABLE EMP3(
EMP_NO VARCHAR2(30),
EMP_NAME VARCHAR2(80) NOT NULL,
SALARY NUMBER NULL,
HIRE_DATE DATE NULL);

------------
CREATE TABLE DEPT_TEST(
DEPT_NO NUMBER NOT NULL,
DEPT_NAME VARCHAR2(50) NOT NULL,
DEPT_DESC VARCHAR2(100),
CREATE_DATE DATE
);

DESC DEPT_TEST;
--칼럼추가
ALTER TABLE DEPT_TEST ADD DEPT_DESC1 VARCHAR2(80);

DESC DEPT_TEST;

--삭제

ALTER TABLE DEPT_TEST DROP COLUMN DEPT_DESC1;
DESC DEPT_TEST;

--PK생성
ALTER TABLE EMP3 ADD CONSTRAINTS EMP3_PK PRIMARY KEY(EMP_NO);

DESC EMP3;

--테이블 삭제

DROP TABLE DEPT_TEST;
DESC DEPT_TEST;

