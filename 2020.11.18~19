--SELECT문 실습

SELECT * FROM EMPLOYEES;

DESC EMPLOYEES;

SELECT EMPLOYEE_ID,FIRST_NAME,LAST_NAME,SALARY FROM EMPLOYEES;

SELECT * FROM DEPARTMENTS;

SELECT * FROM EMPLOYEES WHERE EMPLOYEE_ID=100;

SELECT * FROM EMPLOYEES WHERE EMPLOYEE_ID>100 AND JOB_ID='ST_CLERK';

SELECT * FROM EMPLOYEES WHERE SALARY >=5000;

SELECT * FROM COUNTRIES;

----------------------------------

CREATE TABLE DEPT_TEST(
DEPT_NO NUMBER,
DEPT_NAME VARCHAR2(50) NOT NULL,
DET_DESC VARCHAR2(100),
CREATE_DATE DATE);

DESC DEPT_TEST

ALTER TABLE DEPT_TEST ADD CONSTRAINT DEPT_TEST_PK PRIMARY KEY(DEPT_NO);

ALTER TABLE DEPT_TEST ADD DEPT_DESC2 VARCHAR2(80);

ALTER TABLE DEPT_TEST DROP COLUMN DEPT_DESC2;

ALTER TABLE DEPT_TEST RENAME COLUMN DEPT_DESC1 TO DEF_DESC2;

ALTER TABLE DEPT_TEST ADD SCREAM_1 NUMBER ;

DESC DEPT_TEST;

ALTER TABLE DEPT_TEST MODIFY SCREAM_1 VARCHAR2(100);

CREATE TABLE COUNTRY_TEST(
COUNTRY_ID NUMBER,
COUNTRY_NAME VARCHAR2(100) NOT NULL);

ALTER TABLE COUNTRY_TEST ADD CONSTRAINT COUNTRY_PK PRIMARY KEY(COUNTRY_ID);

DESC COUNTRY_TEST;

ALTER TABLE COUNTRY_TEST ADD REGION_ID NUMBER ;

ALTER TABLE COUNTRY_TEST MODIFY REGION_ID NUMBER NOT NULL;

DROP TABLE COUNTRY_TEST ;

----------------------------

SELECT * FROM EMPLOYEES;

DESC EMPLOYEES;

SELECT EMPLOYEE_ID, FIRST_NAME,LAST_NAME,SALARY FROM EMPLOYEES WHERE SALARY>5000 ORDER BY SALARY;

SELECT * FROM EMPLOYEES WHERE SALARY =2500;

SELECT * FROM EMPLOYEES WHERE SALARY <> 2500;

SELECT * FROM EMPLOYEES WHERE SALARY >3000 ORDER BY SALARY;

SELECT * FROM EMPLOYEES WHERE SALARY >=3000 AND SALARY <=5000 ORDER BY SALARY;

SELECT * FROM EMPLOYEES WHERE SALARY BETWEEN 3000 AND 5000 ORDER BY SALARY;

SELECT * FROM EMPLOYEES WHERE NOT(SALARY=2500) ORDER BY SALARY;

SELECT * FROM EMPLOYEES WHERE LAST_NAME LIKE'G%';

SELECT * FROM EMPLOYEES WHERE JOB_ID IN ('IT_PROG');

SELECT * FROM EMPLOYEES WHERE JOB_ID NOT IN ('IT_PROG');
